{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_BASE_URL": "@next_public_base_url"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "NEXT_PUBLIC_BASE_URL": "@next_public_base_url"
    }
  }
}
